<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/level2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item1">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/level1"
            android:id="@+id/cv3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_songicon"
                android:scaleType="fitXY"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/cv3"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/level2"
            android:layout_marginRight="@dimen/level2"
            android:id="@+id/layout_text"
            android:layout_toLeftOf="@id/layout_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rain On Me"
                style="@style/textSizeLevel2"
                android:textColor="@color/black"
                android:id="@+id/tv_songname"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textSizeLevel1"
                android:text="Lady Gaga @ Ariana Grande"
                android:layout_below="@id/tv_songname"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_songsinger"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/layout_button"
            android:paddingRight="@dimen/level1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:scaleType="center"
                android:background="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>