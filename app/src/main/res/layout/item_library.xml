<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/level1"
    android:id="@+id/layout_itemlibrary">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/iconWidthLevel3_5"
        android:layout_height="@dimen/iconHeightLevel3_5"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/level1"
        android:id="@+id/cv1"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_playlist_play_black_24dp"
            android:id="@+id/iv_itemicon"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:padding="@dimen/level2"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cv1"
        android:layout_toLeftOf="@id/ibtn_addsongto"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist"
            style="@style/textSizeLevel2"
            android:textColor="@color/black"
            android:id="@+id/tv_itemname"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textSizeLevel1"
            android:text="11"
            android:layout_below="@id/tv_itemname"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_itemdetail"/>
    </RelativeLayout>
    <ImageButton
        android:layout_width="@dimen/iconWidthLevel3_5"
        android:layout_height="@dimen/iconHeightLevel3_5"
        android:layout_alignParentRight="true"
        android:id="@+id/ibtn_addsongto"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:padding="@dimen/level2"/>
</RelativeLayout>