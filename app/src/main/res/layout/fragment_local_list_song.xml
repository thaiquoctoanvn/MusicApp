<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LocalListSongFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_locallistsong">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageButton
                android:layout_width="@dimen/iconWidthLevel1"
                android:layout_height="@dimen/iconHeightLevel1"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:background="@color/white"
                android:id="@+id/ibtn_locallistsongback"
                android:scaleType="fitXY"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_locallistsong"
        android:layout_marginTop="@dimen/level1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_locallistsonginfo">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/cv_locallistsongimage"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/level2">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/iv_locallistsongimage"
                        android:background="@color/white"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cv_locallistsongimage"
                    android:text="Tên danh sách bài hát"
                    style="@style/textSizeLevel2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/level2"
                    android:id="@+id/tv_locallistsongname"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đây là một bài hát vui, đây là một bài hát không buồn"
                    android:textColor="#a0a0a0"
                    android:layout_below="@id/tv_locallistsongname"
                    android:layout_toRightOf="@id/cv_locallistsongimage"
                    android:layout_marginLeft="@dimen/level2"
                    android:layout_marginTop="@dimen/level1"
                    style="@style/textSizeLevel1"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:id="@+id/tv_locallistsongdescription"/>
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_locallistsonginfo"
                android:layout_marginLeft="@dimen/level2"
                android:layout_marginRight="@dimen/level2"
                android:layout_marginTop="@dimen/level1"
                android:text="Phát tất cả"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:id="@+id/btn_localplayalllistsong"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/btn_localplayalllistsong"
                android:layout_marginTop="@dimen/level2"
                android:paddingLeft="@dimen/level2"
                android:paddingRight="@dimen/level2"
                android:id="@+id/rv_locallistsong">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>