<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorForeground</item>
<!--        <item name="android:windowBackground">@color/colorForeground</item>-->
    </style>

    <style name="textSizeLevel0">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#a0a0a0</item>
    </style>
    <style name="textSizeLevel1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#a0a0a0</item>
    </style>
    <style name="textSizeLevel2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#a0a0a0</item>
    </style>
    <style name="textSizeLevel3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#a0a0a0</item>
    </style>

</resources>
